# Enable URL rewriting for subdirectory deployments
RewriteEngine On
RewriteBase /family-law-blog/

# Skip existing files and directories (including assets)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Route pretty post URLs like /post/your-slug to post.php
RewriteRule ^post/([^/]+)/?$ post.php?slug=$1 [L,QSA]

# Fallback to index.php for other requests
RewriteRule ^.*$ index.php [L,QSA]
